<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/categorias/add" title=""><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}

	<div class="card mt-4">
		<div class="card-body">
			<h4>{{nome}}</h4>
			<small>Slug: {{slug}}</small><br>
			<small>Data de criação: {{date}}</small>
			<a href="/admin/categorias/edit/{{_id}}" title=""> <button class="btn btn-success mt-4">Editar categoria</button> </a>
			<form action="/admin/categorias/deletar" method="POST">
				<input type="hidden" id="id" value="{{_id}}">
				<button type="submit" class="btn btn-danger mt-2">Deletar categoria</button>
			</form>
		</div>
	</div>

{{else}}
	<h4 class="mt-3">Nenhuma categoria registrada!</h4>
{{/each}}




